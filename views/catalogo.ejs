<%- include('partials/head.ejs') %> 
<body>
    <%- include('partials/header.ejs') %> 
    <main class="catalogoMain">
        <div class="peliculasContainer">
            <div class="wrapper">
                    <% let peliculasAprobadas = peliculas.filter(pelicula => pelicula.aprobado) %>
                    <% peliculasAprobadas.forEach(pelicula => { %>
                        <div class="peliculaCard">
                                    <img src="<%= pelicula.imagen %>" alt="">
                                    <div class="descriptions">
                                        <h1><%= pelicula.titulo %></h1>
                                        <p>
                                            <%= pelicula.descripcion %>
                                        </p>
                                        <p>
                                            Genero: <%= pelicula.genero %>
                                        </p>
                                    </div>
                            </div>
                    <% }) %>
            </div>
        </div>
        </div>
    </main>
<%- include('partials/footer.ejs') %> 