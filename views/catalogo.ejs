<%- include('partials/head.ejs') %>
<body>
  <%- include('partials/header.ejs') %>
  <main class="catalogoMain">
    <%if (editando) {%>
    <h4>
      Pelicula enviada a revisión, esta será revisada por un administrador antes
      de ser publicada.
    </h4>
    <%}%>
    <div class="peliculasContainer">
      <div class="wrapper">
        <% if (peliculas.lenght === 0) { %>
        <h2>No hay peliculas en este momento.</h2>
        <% } else { %> <% let peliculasAprobadas = peliculas.filter(pelicula =>
        pelicula.aprobado) %> <% peliculasAprobadas.forEach(pelicula => { %>
        <div class="peliculaCard">
          <img src="<%= pelicula.imagen %>" alt="" />
          <div class="descriptions">
            <h1><%= pelicula.titulo %></h1>
            <p><%= pelicula.descripcion %></p>
            <p>Genero: <%= pelicula.genero %></p>
          </div>
        </div>
        <% }) %> <% } %>
      </div>
    </div>
  </main>
  <%- include('partials/footer.ejs') %>
</body>
